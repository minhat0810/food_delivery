<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="Dvers Food"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />
    <ImageView
        android:layout_width="407dp"
        android:layout_height="242dp"
        android:src="@drawable/bannerlogin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="35dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardElevation="30dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"
                android:background="#FFFFFF"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sedan"
                    android:text="Đăng Nhập"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="320dp" />
                <EditText
                    android:id="@+id/editEmailLg"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/mail"
                    android:hint="Email"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:background="@drawable/gradient_background"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="381dp" />
                <EditText
                    android:id="@+id/editPassLg"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint="Mật khẩu"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:background="@drawable/gradient_background"
                    android:drawablePadding="8dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="381dp"
                    android:drawableLeft="@drawable/baseline_lock_24"/>
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@null"
                    android:background="@drawable/custom_button"
                    android:text="Đăng Nhập"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa có tài khoản? Đăng kí ngay"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="78dp"
                        tools:layout_editor_absoluteY="441dp"
                        />

<!--                    <Button-->
<!--                        android:id="@+id/btnSignUp"-->
<!--                        android:layout_width="114dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:backgroundTint="#209CF4FF"-->
<!--                        android:text="Đăng kí"-->
<!--                        android:textColor="@color/purple_700"-->
<!--                        tools:ignore="MissingConstraints"-->
<!--                        tools:layout_editor_absoluteX="260dp"-->
<!--                        tools:layout_editor_absoluteY="434dp"-->

<!--                        />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoặc đăng nhập bằng"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:labelFor="@+id/btnloginGG"
                    android:src="@drawable/icongg"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="486dp" />
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/facebook"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="38dp"
                        tools:layout_editor_absoluteY="550dp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
