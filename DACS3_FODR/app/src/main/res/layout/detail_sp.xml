<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bannerapp">

        </ImageView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_favorite_border_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="361dp"
            tools:layout_editor_absoluteY="250dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvtTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="30dp"
            android:fontFamily="@font/sedan"/>
        <TextView
            android:id="@+id/tvtPrice"
            android:fontFamily="@font/sedan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="50.000"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numStars="5"
            android:rating="3.4"
            android:progressTint="#FFEB3B"/>
        <TextView
            android:id="@+id/tvtRating"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sedan"
            android:layout_marginRight="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="5 rating"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvtTime"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/sedan"
            android:layout_marginRight="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="15 phút"
            android:textSize="20dp"
            />
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_access_time_24"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/oswald"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/oswald"/>

        <ImageView
            android:id="@+id/giamSL"
            android:layout_marginLeft="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/giam" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/tangSL"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tang" />
    </LinearLayout>

</LinearLayout>